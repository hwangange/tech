<?xml version="1.0"?>
<LinearLayout android:weightSum="1" android:background="#070d52" android:orientation="vertical" tools:context=".Login" android:paddingBottom="@dimen/activity_vertical_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#b6eff9"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:allowUndo="true"
        android:layout_weight="0.08"
        android:text="Welcome to VTRACC!"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vtracc"
        android:src="@drawable/ic_launcher"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_height="wrap_content"
        android:layout_width="241dp"
        android:textColor="#fbf8f8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="0.08"
        android:text="Please login or register"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/username"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#f0f8f9"
        android:textColorHint="#f7efef"
        android:autoText="false"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Username"/>

    <EditText
        android:id="@+id/password"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#f0f8f9"
        android:textColorHint="#f7efef"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="textPassword"
        android:hint="@string/prompt_password"/>

    <Button
        android:id="@+id/sign_in"

        android:layout_height="31dp"
        android:layout_width="match_parent"
        android:text="LOG IN"
        android:layout_marginTop="16dp"
        android:background = "@drawable/home_buttons"
        style = "@style/loginButton"/>

    <Button
        android:id="@+id/register"

        android:layout_height="26dp"
        android:layout_width="match_parent"
        android:layout_weight="0.03"
        android:text="Register"
        android:layout_marginTop="4dp"
        android:background="@drawable/home_buttons"
        style = "@style/loginButton"/>

    <!--android:background="#7dd2f2"-->

</LinearLayout>